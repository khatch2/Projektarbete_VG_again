<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/beige"
    >

    <TextView
        android:id="@+id/tv_bookFinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="184dp"
        android:background="#FEED00"
        android:fontFamily="times"
        android:text="@string/bokens_hittaren"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/tv_GoogleBooksApi"
        app:layout_constraintStart_toStartOf="@+id/tv_GoogleBooksApi" />

    <ImageView
        android:id="@+id/iv_GoogleBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:autofillHints="Descriped_Image_Api"
        android:background="@color/red"
        android:backgroundTint="@color/red"
        android:clickable="true"
        android:contentDescription="@string/this_is_a_smallthumbnail"
        android:contextClickable="true"
        android:foreground="@drawable/content"
        android:tooltipText="Here is an image from Api."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_GoogleBooksApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="284dp"
        android:fontFamily="times"
        android:text="@string/here_is_googlebooksapi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/ed_EnterDesiredBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:fontFamily="times"
        android:hint="@string/enter_desired_book"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_BookSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookFinder"
        android:background="@color/white"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_BookSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:fontFamily="times"
        android:text="@string/search"
        android:textAllCaps="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/ed_EnterDesiredBook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ed_EnterDesiredBook" />

    <TextView
        android:id="@+id/tv_CounterSearchesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="79dp"
        android:fontFamily="times"
        android:text="@string/textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>