<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aqua"
    tools:context=".ViewDatabaseFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hello_from_the_view_database_fragment"
                android:textColor="#00695C" />

            <Button
                android:id="@+id/btn_viewDatabaseFragmentToResultatFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="times"
                android:text="@string/to_resultat_fragment"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <ListView
                android:id="@+id/listView_UsersListFragment"
                android:layout_width="310sp"
                android:layout_height="410sp"
                android:background="@color/wheat"
                android:clickable="true"
                android:contextClickable="true"
                android:longClickable="true"
                android:verticalScrollbarPosition="right" />

            <TextView
                android:id="@+id/tv_CounterValueFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvcountervaluefragment_text"
                android:textColor="#00695C" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


</FrameLayout>